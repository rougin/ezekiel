{
  "name": "rougin/ezekiel",
  "description": "An expressive SQL query builder in PHP.",
  "homepage": "https://roug.in/ezekiel/",
  "license": "MIT",
  "authors":
  [
    {
      "name": "Rougin Gutib",
      "email": "rougingutib@gmail.com",
      "homepage": "https://roug.in/",
      "role": "Software Engineer"
    }
  ],
  "require":
  {
    "php": ">=5.3.0"
  },
  "require-dev":
  {
    "phpunit/phpunit": "*",
    "sanmai/phpunit-legacy-adapter": "*"
  },
  "autoload":
  {
    "psr-4":
    {
      "Rougin\\Ezekiel\\": "src"
    }
  },
  "autoload-dev":
  {
    "psr-4":
    {
      "Rougin\\Ezekiel\\": "tests"
    }
  },
  "scripts":
  {
    "analyze": "phpstan analyse",
    "restyle": "php-cs-fixer fix --config=phpstyle.php",
    "test": "phpunit"
  }
}
